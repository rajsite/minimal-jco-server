{
    "name": "minimal-jco-server",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "npm run build:wit && npm run build:wasm",
        "build:wit": "wkg wit fetch",
        "build:wasm": "mkdirp dist && jco componentize -w wit -o dist/main.wasm src/main.js",
        "start": "wasmtime serve --addr 127.0.0.1:8000 -S cli=y dist/main.wasm",
        "test": "curl 127.0.0.1:8000",
        "setup-linux": "npm run setup-linux:npm && npm run setup-linux:rust && npm run setup-linux:binstall && npm run setup-linux:binstall:packages",
        "setup-linux:npm": "npm ci",
        "setup-linux:rust": "curl https://sh.rustup.rs -sSf | sh -s -- --profile minimal -y",
        "setup-linux:binstall": "curl -L --proto '=https' --tlsv1.2 -sSf https://raw.githubusercontent.com/cargo-bins/cargo-binstall/main/install-from-binstall-release.sh | bash",
        "setup-linux:binstall:packages": ". \"$HOME/.cargo/env\" && cargo binstall wasmtime-cli@36.0.2 wkg@0.11.0 -y"
    },
    "devDependencies": {
        "@bytecodealliance/jco": "^1.15.2",
        "mkdirp": "^3.0.1"
    }
}
